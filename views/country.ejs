<%- include('partials/header'); -%>
<main class="country dark-mode-bg">
  <section class="country__navigation-section">
    <a href="/">
      <div class="navigation__back-btn dark-mode-element">
        <img
          alt="arrow icon"
          class="navigation__icon"
          src="/img/arrow-dark.png"
        />
      </div>
    </a>
  </section>

  <!-- Country Container -->
  <section class="country__country-section">
    <!-- Country Flag -->
    <div class="country__country-flag">
      <img
        src="<%= country.flags.png %>"
        alt="<%= country.name %> flag"
        class="country__country-flag-image"
      />
    </div>

    <!-- Country Specs -->
    <div class="country__country-specs-container">
      <!-- Country Name -->
      <h1 class="country__country-name"><%= country.name.official %></h1>

      <!-- Country Info -->
      <div class="country__country-info-container">
        <div class="country__col">
          <p class="country__info">
            <span class="country__info-label">Name:</span>
            <%= country.name.official %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Population:</span> <%=
            country.population.toLocaleString() %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Region:</span> <%= country.region
            %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Sub-Region:</span> <%=
            country.subregion %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Capital:</span> <%=
            country.capital %>
          </p>
        </div>

        <div class="country__col">
          <p class="country__info">
            <span class="country__info-label">Top-Level Domain:</span> <%=
            country.tld %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Currencies:</span>
            <% for (const property in country.currencies) { %>
            <span> <%= country.currencies[property].name %> </span>
            <% } %>
          </p>
          <p class="country__info">
            <span class="country__info-label">Languages:</span> <%= languages %>
          </p>
        </div>
      </div>

      <!-- Country Borders -->
      <div class="country__border-countries-container">
        <p class="country__border-countries-label">Border Countries:</p>
        <% if (borders.length) { %> None <% } else { %> <% for (let i = 0; i <
        borders.length; i++) { %>
        <a href="/country/<%= borders[i].code %>">
          <p class="country__border-country dark-mode-element">
            <%= borders[i].name %>
          </p>
        </a>
        <% } %> <% } %>
      </div>
      <!-- country-borders -->
    </div>
    <!-- country-specs -->
  </section>
  <!-- country-container-->
</main>
<%- include('partials/footer'); -%>
